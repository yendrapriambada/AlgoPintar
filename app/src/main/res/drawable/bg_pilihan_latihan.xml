<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#4B8196"/> <!-- Rectangle background color -->
            <corners android:radius="20dp"/> <!-- Rectangle corner radius -->
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FEFEFE"/> <!-- Circle color in the middle -->
            <corners android:radius="50dp"/> <!-- Circle corner radius to make it a circle -->
            <size
                android:width="80dp"
                android:height="80dp"/> <!-- Circle size -->
        </shape>
    </item>
</layer-list>
