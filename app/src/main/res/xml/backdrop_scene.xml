<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="none"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="300"
        motion:motionInterpolator="linear">
        <KeyFrameSet></KeyFrameSet>
        <OnClick motion:targetId="@+id/btn_menu" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/btn_setting"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:visibility="gone"
            motion:layout_constraintEnd_toEndOf="@+id/btn_menu"
            motion:layout_constraintStart_toStartOf="@+id/btn_menu"
            motion:layout_constraintTop_toTopOf="@+id/btn_menu" />
        <Constraint
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            motion:layout_constraintEnd_toEndOf="@+id/btn_setting"
            motion:layout_constraintStart_toStartOf="@+id/btn_setting"
            motion:layout_constraintTop_toBottomOf="@+id/btn_setting" />
        <Constraint
            android:id="@+id/btn_petunjuk"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:visibility="gone"
            motion:layout_constraintEnd_toEndOf="@+id/tv_setting"
            motion:layout_constraintStart_toStartOf="@+id/tv_setting"
            motion:layout_constraintTop_toTopOf="@+id/btn_menu" />
        <Constraint
            android:id="@+id/tv_petunjuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            motion:layout_constraintEnd_toEndOf="@+id/btn_petunjuk"
            motion:layout_constraintStart_toStartOf="@+id/btn_petunjuk"
            motion:layout_constraintTop_toBottomOf="@+id/btn_petunjuk" />
        <Constraint
            android:id="@+id/btn_kompetensi"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:visibility="gone"
            motion:layout_constraintEnd_toEndOf="@+id/tv_petunjuk"
            motion:layout_constraintStart_toStartOf="@+id/tv_petunjuk"
            motion:layout_constraintTop_toTopOf="@+id/btn_menu" />
        <Constraint
            android:id="@+id/tv_kompetensi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            motion:layout_constraintEnd_toEndOf="@+id/btn_kompetensi"
            motion:layout_constraintStart_toStartOf="@+id/btn_kompetensi"
            motion:layout_constraintTop_toBottomOf="@+id/btn_kompetensi" />
        <Constraint
            android:id="@+id/btn_profile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:visibility="gone"
            motion:layout_constraintEnd_toEndOf="@+id/tv_kompetensi"
            motion:layout_constraintStart_toStartOf="@+id/tv_kompetensi"
            motion:layout_constraintTop_toTopOf="@+id/btn_menu" />
        <Constraint
            android:id="@+id/tv_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            motion:layout_constraintEnd_toEndOf="@+id/btn_profile"
            motion:layout_constraintStart_toStartOf="@+id/btn_profile"
            motion:layout_constraintTop_toBottomOf="@+id/btn_profile" />
        <Constraint
            android:id="@+id/img_backdrop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/btn_keluar"
            motion:layout_constraintStart_toEndOf="@+id/btn_menu"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/btn_setting"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            motion:layout_constraintEnd_toEndOf="@+id/tv_menu"
            motion:layout_constraintStart_toStartOf="@+id/tv_menu"
            motion:layout_constraintTop_toBottomOf="@+id/tv_menu" />
        <Constraint
            android:id="@+id/img_backdrop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/btn_keluar"
            motion:layout_constraintStart_toEndOf="@+id/btn_menu"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>
</MotionScene>