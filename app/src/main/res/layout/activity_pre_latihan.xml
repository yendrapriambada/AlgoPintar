<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreLatihanActivity">


    <include
        android:id="@+id/include"
        layout="@layout/backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/codepro"
        android:text="LATIHAN"
        android:textColor="#050A30"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="111dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="100dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="32dp" />

    <ImageView
        android:id="@+id/btn_latihan_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="8dp"
        android:src="@drawable/bg_pilihan_latihan"
        app:layout_constraintBottom_toBottomOf="@+id/btn_latihan_2"
        app:layout_constraintEnd_toStartOf="@+id/btn_latihan_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/include"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toTopOf="@+id/btn_latihan_2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/codepro_bold"
        android:text="1"
        android:textColor="#4B8196"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_latihan_1"
        app:layout_constraintEnd_toEndOf="@+id/btn_latihan_1"
        app:layout_constraintStart_toStartOf="@+id/btn_latihan_1"
        app:layout_constraintTop_toTopOf="@+id/btn_latihan_1" />

    <ImageView
        android:id="@+id/btn_latihan_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="6dp"
        android:src="@drawable/bg_pilihan_latihan"
        app:layout_constraintBottom_toTopOf="@+id/btn_latihan_5"
        app:layout_constraintEnd_toStartOf="@+id/btn_latihan_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_latihan_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_tittle" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/codepro_bold"
        android:text="2"
        android:textColor="#4B8196"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_latihan_2"
        app:layout_constraintEnd_toEndOf="@+id/btn_latihan_2"
        app:layout_constraintStart_toStartOf="@+id/btn_latihan_2"
        app:layout_constraintTop_toTopOf="@+id/btn_latihan_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/codepro_bold"
        android:text="2"
        android:textColor="#4B8196"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_latihan_2"
        app:layout_constraintEnd_toEndOf="@+id/btn_latihan_2"
        app:layout_constraintStart_toStartOf="@+id/btn_latihan_2"
        app:layout_constraintTop_toTopOf="@+id/btn_latihan_2" />

    <ImageView
        android:id="@+id/btn_latihan_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="6dp"
        android:src="@drawable/bg_pilihan_latihan"
        app:layout_constraintBottom_toBottomOf="@+id/btn_latihan_2"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_latihan_2"
        app:layout_constraintTop_toTopOf="@+id/btn_latihan_2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/codepro_bold"
        android:text="3"
        android:textColor="#4B8196"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_latihan_3"
        app:layout_constraintEnd_toEndOf="@+id/btn_latihan_3"
        app:layout_constraintStart_toStartOf="@+id/btn_latihan_3"
        app:layout_constraintTop_toTopOf="@+id/btn_latihan_3" />

    <ImageView
        android:id="@+id/btn_latihan_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="6dp"
        android:src="@drawable/bg_pilihan_latihan"
        app:layout_constraintBottom_toBottomOf="@+id/btn_latihan_5"
        app:layout_constraintEnd_toStartOf="@+id/btn_latihan_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_latihan_1"
        app:layout_constraintTop_toTopOf="@+id/btn_latihan_5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/codepro_bold"
        android:text="4"
        android:textColor="#4B8196"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_latihan_4"
        app:layout_constraintEnd_toEndOf="@+id/btn_latihan_4"
        app:layout_constraintStart_toStartOf="@+id/btn_latihan_4"
        app:layout_constraintTop_toTopOf="@+id/btn_latihan_4" />

    <ImageView
        android:id="@+id/btn_latihan_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="16dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="6dp"
        android:src="@drawable/bg_pilihan_latihan"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="@+id/btn_latihan_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_latihan_4"
        app:layout_constraintTop_toBottomOf="@+id/btn_latihan_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/codepro_bold"
        android:text="5"
        android:textColor="#4B8196"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_latihan_5"
        app:layout_constraintEnd_toEndOf="@+id/btn_latihan_5"
        app:layout_constraintStart_toStartOf="@+id/btn_latihan_5"
        app:layout_constraintTop_toTopOf="@+id/btn_latihan_5" />

</androidx.constraintlayout.widget.ConstraintLayout>