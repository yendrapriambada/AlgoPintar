<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2ECEB"
    tools:context=".LeaderboardActivity">

    <ImageView
        android:id="@+id/img_backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/backdrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/title_leaderboard"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/title_leaderboard"
        app:layout_constraintEnd_toEndOf="@+id/img_backdrop"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/img_backdrop"
        app:layout_constraintTop_toTopOf="@+id/img_backdrop" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="-17dp"
        android:background="@drawable/bg_menu"
        android:padding="4dp"
        android:src="@drawable/baseline_settings_24"
        app:layout_constraintBottom_toTopOf="@+id/img_backdrop"
        app:layout_constraintEnd_toEndOf="@+id/img_backdrop"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="@+id/img_backdrop" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="-17dp"
        android:background="@drawable/bg_menu2"
        android:padding="4dp"
        android:src="@drawable/baseline_help_24"
        app:layout_constraintBottom_toTopOf="@+id/img_backdrop"
        app:layout_constraintStart_toEndOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="-17dp"
        android:background="@drawable/bg_menu"
        android:padding="4dp"
        android:src="@drawable/baseline_menu_book_24"
        app:layout_constraintBottom_toTopOf="@+id/img_backdrop"
        app:layout_constraintStart_toEndOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="-17dp"
        android:background="@drawable/bg_menu2"
        android:padding="4dp"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintBottom_toTopOf="@+id/img_backdrop"
        app:layout_constraintStart_toEndOf="@+id/imageView6" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="-17dp"
        android:background="@drawable/bg_menu_exit"
        android:padding="4dp"
        android:src="@drawable/baseline_close_24"
        app:layout_constraintBottom_toTopOf="@+id/img_backdrop"
        app:layout_constraintEnd_toEndOf="@+id/img_backdrop"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="@+id/img_backdrop" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_leaderboard"
        app:layout_constraintBottom_toBottomOf="@+id/img_backdrop"
        app:layout_constraintEnd_toEndOf="@+id/img_backdrop"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintStart_toStartOf="@+id/img_backdrop"
        app:layout_constraintTop_toTopOf="@+id/img_backdrop"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/codepro_bold"
        android:text="LEADERBOARD"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

</androidx.constraintlayout.widget.ConstraintLayout>