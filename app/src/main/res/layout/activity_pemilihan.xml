<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2ECEB"
    tools:context=".PemilihanActivity">

    <include
        android:id="@+id/include"
        layout="@layout/backdrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/codepro"
        android:text="Algoritma Pemilihan"
        android:textColor="#050A30"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/include"
        app:layout_constraintStart_toStartOf="@+id/include"
        app:layout_constraintTop_toTopOf="@+id/include"
        app:layout_constraintVertical_bias="0.22000003" />

    <ImageView
        android:id="@+id/menu_materi"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/card_pemilihan_materi"
        app:layout_constraintBottom_toBottomOf="@+id/menu_latihan1"
        app:layout_constraintEnd_toStartOf="@+id/menu_latihan1"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/menu_latihan1"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/card_pemilihan_latihan1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/include"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/menu_latihan2"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/card_pemilihan_latihan2"
        app:layout_constraintBottom_toBottomOf="@+id/menu_latihan1"
        app:layout_constraintStart_toEndOf="@+id/menu_latihan1"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />



</androidx.constraintlayout.widget.ConstraintLayout>