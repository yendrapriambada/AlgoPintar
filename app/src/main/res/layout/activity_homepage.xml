<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2ECEB"
    tools:context=".HomepageActivity">

    <ImageView
        android:id="@+id/img_backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/backdrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/card_leaderboard"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:src="@drawable/card_pemilihan"
        app:layout_constraintBottom_toBottomOf="@+id/img_backdrop"
        app:layout_constraintEnd_toEndOf="@+id/img_backdrop"
        app:layout_constraintStart_toStartOf="@+id/img_backdrop"
        app:layout_constraintTop_toTopOf="@+id/img_backdrop"
        app:layout_constraintVertical_bias="0.63" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/card_perulangan"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/home_edt_name"
        android:fontFamily="@font/codefont_bold"
        android:paddingStart="12dp"
        android:paddingTop="10dp"
        android:paddingEnd="12dp"
        android:paddingBottom="10dp"
        android:text="Nama: "
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/img_backdrop" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="-17dp"
        android:background="@drawable/bg_menu"
        android:padding="4dp"
        android:src="@drawable/baseline_settings_24"
        app:layout_constraintBottom_toTopOf="@+id/img_backdrop"
        app:layout_constraintStart_toStartOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="-17dp"
        android:background="@drawable/bg_menu2"
        android:padding="4dp"
        android:src="@drawable/baseline_help_24"
        app:layout_constraintBottom_toTopOf="@+id/img_backdrop"
        app:layout_constraintStart_toEndOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="-17dp"
        android:background="@drawable/bg_menu"
        android:padding="4dp"
        android:src="@drawable/baseline_menu_book_24"
        app:layout_constraintBottom_toTopOf="@+id/img_backdrop"
        app:layout_constraintStart_toEndOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="-17dp"
        android:background="@drawable/bg_menu2"
        android:padding="4dp"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintBottom_toTopOf="@+id/img_backdrop"
        app:layout_constraintStart_toEndOf="@+id/imageView6" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="-17dp"
        android:background="@drawable/bg_menu_exit"
        android:padding="4dp"
        android:src="@drawable/baseline_close_24"
        app:layout_constraintBottom_toTopOf="@+id/img_backdrop"
        app:layout_constraintEnd_toEndOf="@+id/imageView8" />


</androidx.constraintlayout.widget.ConstraintLayout>